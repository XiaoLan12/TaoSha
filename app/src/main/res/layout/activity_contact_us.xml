<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.taosha.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:isShowSearchView="false"
        app:leftButtonIcon="@drawable/icon_right"
        app:title="@string/contact_us"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@drawable/img_full_screen">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/icon_delete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_14"
        >
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="客服热线:"/>
        <TextView
            android:id="@+id/customer_service_hotline_tv"
            style="@style/TS.Theme.Widget.Text"
            android:text="0779-32525243"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_14"
        >
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="邮箱地址:"/>
        <TextView
            android:id="@+id/email_address_tv"
            style="@style/TS.Theme.Widget.Text"
            android:text="562562562@qq.com"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_10"
        >
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="企业地址:"/>
        <TextView
            android:id="@+id/business_address_tv"
            style="@style/TS.Theme.Widget.Text"
            android:text="广东省东莞市东莞市福利卡世纪东方看来是打开"/>

    </LinearLayout>
    <TextView
        style="@style/TS.Theme.Widget.Text"
        android:background="@color/common_bg"
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:padding="@dimen/dp_14"
        android:text="常见问题"/>
    <RelativeLayout
        android:id="@+id/commonproblems_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_selector"
        android:padding="@dimen/dp_14">

        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="1.如何在大浪淘沙上购买纱线"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/commonproblems_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_selector"
        android:padding="@dimen/dp_14">

        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="2.要怎么支付货款"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/commonproblems_rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_selector"
        android:padding="@dimen/dp_14">

        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="3.平台怎么保证线纱的质量"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/commonproblems_rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_selector"
        android:padding="@dimen/dp_14">

        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="4.质量问题引起的退货,物流费用怎么赔付"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/commonproblems_rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_selector"
        android:padding="@dimen/dp_14">

        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="5.索取小样,快递费怎么收取"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_right"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>

        <View
            style="@style/TS.Theme.Widget.Divider.Line.Vertical"
            android:layout_marginTop="100dp"
            android:layout_height="@dimen/dp_10"/>
        <TextView
            android:id="@+id/dialhotline_tv"
            style="@style/TS.Theme.Widget.Text"
            android:padding="@dimen/dp_10"
            android:textColor="@color/red1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_edittext_red_selector"
            android:text="未解决?拨打热线"/>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>