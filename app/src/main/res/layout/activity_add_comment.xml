<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.taosha.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:isShowSearchView="false"
        app:leftButtonIcon="@drawable/icon_right"
        app:title="发表评论"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <ImageView
            android:id="@+id/pic_addcomment_iv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            tools:src="@drawable/icon_delete"
            />
        <TextView
            android:id="@+id/title_addcomment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            tools:text="商品"/>
    </LinearLayout>
    <View style="@style/TS.Theme.Widget.Divider.Line.Vertical"/>

    <EditText
        android:id="@+id/content_addcomment_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@null"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:gravity="top"
        android:paddingBottom="@dimen/dp_5"
        android:textColorHint="@color/common_h3"
        android:hint="宝贝满足你的期待吗？说说你的使用心得 分享给想买的他们吧"

        android:minHeight="100dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/common_divider_narrow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/icon_delete"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="店铺评分"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="质量评价"/>
       <com.yizhisha.taosha.widget.StarView
           android:layout_alignParentRight="true"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="10dp"
           android:id="@+id/startview_quality_sv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           fresco:mClickImageId="@drawable/icon_ratingbar"
           fresco:mDefaultImageId="@drawable/icon_ratingbar_normal"
           fresco:mImageHeight="@dimen/dp_25"
           fresco:mImageWidth="@dimen/dp_25"
           fresco:mMargin="2dp"
           fresco:mStarChoose="0"
           fresco:mStarNum="5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="物流评价"/>
        <com.yizhisha.taosha.widget.StarView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/startview_logistics_sv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fresco:mClickImageId="@drawable/icon_ratingbar"
            fresco:mDefaultImageId="@drawable/icon_ratingbar_normal"
            fresco:mImageHeight="@dimen/dp_25"
            fresco:mImageWidth="@dimen/dp_25"
            fresco:mMargin="2dp"
            fresco:mStarChoose="0"
            fresco:mStarNum="5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10">
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:text="服务评价"/>
        <com.yizhisha.taosha.widget.StarView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/startview_serve_sv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fresco:mClickImageId="@drawable/icon_ratingbar"
            fresco:mDefaultImageId="@drawable/icon_ratingbar_normal"
            fresco:mImageHeight="@dimen/dp_25"
            fresco:mImageWidth="@dimen/dp_25"
            fresco:mMargin="2dp"
            fresco:mStarChoose="0"
            fresco:mStarNum="5"/>
    </LinearLayout>
</LinearLayout>
