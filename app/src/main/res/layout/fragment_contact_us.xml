<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.taosha.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:leftButtonIcon="@drawable/icon_back"
        android:layout_alignParentTop="true"
        app:title="@string/contact_us"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/icon_contact_us_bg">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_14"
                >
                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="客服热线:"/>
                <TextView
                    android:id="@+id/customer_service_hotline_tv"
                    style="@style/TS.Theme.Widget.Text"
                    android:text="0769-83115811"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_14"
                >
                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="邮箱地址:"/>
                <TextView
                    android:id="@+id/email_address_tv"
                    style="@style/TS.Theme.Widget.Text"
                    android:text="5874511214@qq.com"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_10"
                >
                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:text="企业地址:"/>
                <TextView
                    android:id="@+id/business_address_tv"
                    style="@style/TS.Theme.Widget.Text"
                    android:layout_gravity="bottom"
                    android:text="广东省东莞市大朗镇松柏朗新园一路6号创意信息服务产业园区"/>

            </LinearLayout>
            <TextView
                style="@style/TS.Theme.Widget.Text"
                android:background="@color/common_bg"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:padding="@dimen/dp_14"
                android:text="常见问题"/>
            <RelativeLayout
                android:id="@+id/commonproblems_rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_selector"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="1.如何在大朗淘纱上购买纱线"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/TS.Theme.Widget.Divider.Line.Vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/commonproblems_rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_selector"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="2.要怎么支付货款"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/TS.Theme.Widget.Divider.Line.Vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/commonproblems_rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_selector"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="3.平台怎么保证线纱的质量"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/TS.Theme.Widget.Divider.Line.Vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/commonproblems_rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_selector"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="4.质量问题引起的退货,物流费用怎么赔付"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/TS.Theme.Widget.Divider.Line.Vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>
            <RelativeLayout
                android:id="@+id/commonproblems_rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_selector"
                android:padding="@dimen/dp_14">

                <TextView
                    style="@style/TS.Theme.Widget.Text"
                    android:text="5.索取小样,快递费怎么收取"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/TS.Theme.Widget.Divider.Line.Vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>

            <View
                style="@style/TS.Theme.Widget.Divider.Line.Vertical"
                android:layout_marginTop="100dp"
                android:layout_height="@dimen/dp_10"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/dialhotline_tv"
            style="@style/TS.Theme.Widget.Text"
            android:padding="@dimen/dp_10"
            android:textColor="@color/red1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_edittext_red_selector"
            android:text="未解决?拨打热线"/>
    </LinearLayout>

</RelativeLayout>