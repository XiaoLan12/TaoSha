<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/childshopp_rl"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:padding="@dimen/dp_5">

            <CheckBox
                android:id="@+id/childshopp_cb"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_checxbox_selector1"
                android:button="@null" />

            <ImageView
                android:id="@+id/tradehead_shoppcar2_iv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_toRightOf="@+id/childshopp_cb"
                android:src="@drawable/icon_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_normal_rl"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/childshopp_rl"
            android:background="@color/white"
            android:padding="@dimen/dp_5"
            >
            <TextView
                android:id="@+id/tradename_shoppcar2_tv"
                style="@style/TS.Theme.Widget.Text"
                android:textColor="@color/common_h1" />

            <TextView
                android:id="@+id/tradecolor_tv"
                style="@style/TS.Theme.Widget.Text"
                android:layout_below="@+id/tradename_shoppcar2_tv"
                android:text="色号：" />

            <TextView
                android:id="@+id/tradecolor_shoppcar2_tv"
                style="@style/TS.Theme.Widget.Text"
                android:layout_below="@+id/tradename_shoppcar2_tv"
                android:layout_toRightOf="@+id/tradecolor_tv"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/tradeprice_shoppcar2_tv"
                style="@style/TS.Theme.Widget.Text"
                android:layout_alignParentBottom="true"
                android:text="aa"
                android:textColor="@color/red1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_edit_rl"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/childshopp_rl"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/shop_edit_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/delete_shop_btn"
                android:background="@drawable/shape_bg_gray_selector"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2">

                <TextView
                    android:id="@+id/shoptitle_edit_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:text="色号:李#1公斤" />

                <View
                    style="@style/TS.Theme.Widget.Divider.Line.Horizontal"
                    android:layout_marginRight="@dimen/dp_5" />

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/icon_edit" />
            </LinearLayout>

            <Button
                android:id="@+id/delete_shop_btn"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/red1"
                android:text="删除"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>