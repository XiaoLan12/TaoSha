<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tradelpaymentpay_myorder_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:text="(运费到付)" />
        <TextView
            android:id="@+id/tradeltotal_myorder_tv"
            style="@style/TS.Theme.Widget.Text"
            android:textColor="@color/red1"
            android:layout_toLeftOf="@+id/tradelpaymentpay_myorder_tv"
            android:text="￥：33.50" />
        <!--<TextView
            android:id="@+id/tradeltotal_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toLeftOf="@+id/tradeltotal_myorder_tv"
            android:text="合计:" />
        <TextView
            android:id="@+id/tradelnumber_total_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/tradeltotal_tv"
            android:text="共1件商品" />-->
    </RelativeLayout>
    <View style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"

        android:paddingBottom="@dimen/dp_16"
        android:gravity="right">
        <TextView
            android:id="@+id/contact_the_merchant_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_edittext_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:text="联系商家"/>
        <TextView
            android:id="@+id/confirm_goods_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_edittext_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="确认收货"/>
        <TextView
            android:id="@+id/immediate_evaluation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_edittext_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="立即评价"/>
        <TextView
            android:id="@+id/againbuy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_edittext_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="再次购买"/>
        <TextView
            android:id="@+id/cancel_the_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_edittext_gray_selector"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            android:text="取消订单"/>
        <TextView
            android:id="@+id/immediate_payment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red1"
            android:padding="@dimen/dp_8"
            android:background="@drawable/shape_edittext_red_selector"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_5"
            android:text="立即付款"/>
    </LinearLayout>
    <View style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:layout_height="@dimen/dp_8"
        />
</LinearLayout>