<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.taosha.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:isShowSearchView="false"
        app:leftButtonIcon="@drawable/icon_right"
        app:title="地址管理"/>
    <View style="@style/TS.Theme.Widget.Divider.Line.Vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_45">
    </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/add_address_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/red1"
            android:gravity="center"
            android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新增收货地址"
            android:textColor="@color/white"
            android:gravity="center"
            android:drawableLeft="@drawable/icon_delete"
            />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
