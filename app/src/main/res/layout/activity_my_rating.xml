<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yizhisha.taosha.base.BaseToolbar
        android:id="@+id/toolbar"
        style="@style/basetoolbarStyle"
        app:isShowSearchView="false"
        app:leftButtonIcon="@drawable/icon_right"
        app:title="@string/my_rating"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/img_full_screen">
    <ImageView
        android:id="@+id/userhead_myrating_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"/>
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/userhead_myrating_iv"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal2"
            android:text="隔壁家的老王"/>
    </RelativeLayout>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commontablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tl:tl_indicator_color="@color/red1"
        tl:tl_textSelectColor="@color/red1"
        tl:tl_textUnselectColor="@color/common_h2"
        tl:tl_underline_color="@color/white"
        tl:tl_underline_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
