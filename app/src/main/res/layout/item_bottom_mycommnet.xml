<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/detail_comment_mycomment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="aaaaaaaaaaaaaaaaaaa"
        android:textColor="@color/common_h1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <RelativeLayout
        android:id="@+id/business_reply_mycomment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:visibility="visible"
        android:layout_margin="@dimen/dp_5"

        >
        <TextView
            android:id="@+id/business_reply_mycomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow2"
            android:text="商家回复:"/>
        <TextView
            android:id="@+id/business_reply_content_mycomment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/business_reply_mycomment"
            android:textColor="@color/yellow2"
            tools:text="商家回复"/>
        <TextView
            android:id="@+id/business_reply_time_mycomment_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_below="@+id/business_reply_content_mycomment_tv"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/yellow2"
            tools:text="2017.06.19"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/addcomment_mycomment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_addcomment_mycomment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h1"
            android:text="买家追评:"/>
        <TextView
            android:id="@+id/detail_addcomment_mycomment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_h1"
            tools:text="买家追评"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/time_addcomment_img_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_2"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red1"
            android:text="追评时间:"/>
        <TextView
            android:id="@+id/time_addcomment_img_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red1"
            android:text="aa"
            />
    </LinearLayout>
    <!-- 不同的地方 -->

    <com.yizhisha.taosha.widget.MultiImageView
        android:id="@+id/cilrcleimgMv_mycomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone"
        >
    </com.yizhisha.taosha.widget.MultiImageView>

</LinearLayout>