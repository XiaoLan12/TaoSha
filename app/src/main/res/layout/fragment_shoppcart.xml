<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/common_bg"
    android:layout_height="match_parent">
    <com.yizhisha.taosha.base.BaseToolbar
        android:id="@+id/toolber"
        style="@style/basetoolbarStyle"
        app:isShowSearchView="false"
        android:layout_alignParentTop="true"
        app:title="@string/shoppcart"/>
    <View

        style="@style/TS.Theme.Widget.Divider.Line.Vertical"
        android:id="@+id/view"
        android:layout_below="@+id/toolber"/>


    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlBottomBar"
        android:layout_below="@+id/view"
        android:cacheColorHint="#00000000"
        android:divider="#ebebeb"
        android:groupIndicator="@null"
        android:scrollbars="none"
        android:dividerHeight="1dp"
        />

    <RelativeLayout
        android:id="@+id/rlBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="#ccc"/>

        <CheckBox
            android:id="@+id/id_cb_select_all"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_checxbox_selector1"
            android:button="@null"/>
        <TextView
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@id/id_cb_select_all"
            android:layout_centerVertical="true"
            android:text="全选"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCountMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="@string/total"
                    android:textColor="@color/red1"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvPostPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="(不含运费)"
                    android:textColor="@color/common_h2"
                    android:textSize="11sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btnSettle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="立即结算"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal2"/>
        </LinearLayout>
        </RelativeLayout>
    <com.yizhisha.taosha.widget.CommonLoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/view"
        android:background="@color/white"
        android:layout_height="match_parent"
        />
    </RelativeLayout>