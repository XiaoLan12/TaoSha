<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">
        <ImageView
            android:id="@+id/shophead_selectyarn_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_delete"/>
        <TextView
            android:id="@+id/shopname_selectyarn_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@+id/shophead_selectyarn_iv"
            android:layout_alignTop="@+id/shophead_selectyarn_iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/common_h1"
            />
        <TextView
            android:id="@+id/composition_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@+id/shophead_selectyarn_iv"
            android:layout_below="@+id/shopname_selectyarn_tv"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/font_small"
            android:text="成分比例:"/>
        <TextView
            android:id="@+id/composition_selectyarn_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@+id/composition_tv"
            android:layout_below="@+id/shopname_selectyarn_tv"
            android:layout_alignTop="@+id/composition_tv"
            android:textSize="@dimen/font_small"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/fit_pittype_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@+id/shophead_selectyarn_iv"
            android:layout_below="@+id/composition_selectyarn_tv"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/font_small"
            android:text="适合针型:"/>

        <TextView
            android:id="@+id/fit_pittype_selectyarn_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@+id/fit_pittype_tv"
            android:layout_below="@+id/composition_selectyarn_tv"
            android:layout_alignTop="@+id/fit_pittype_tv"
            android:textSize="@dimen/font_small"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shophead_selectyarn_iv"
            android:layout_below="@+id/fit_pittype_selectyarn_tv"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/dp_5">

                <TextView
                    android:id="@+id/totalprice_selectyarn_tv"
                    style="@style/TS.Theme.Widget.Text"
                    android:textSize="@dimen/font_normal3"
                    android:textColor="@color/red1"
                    android:layout_gravity="top"
                    />
                <TextView
                    android:id="@+id/tv"
                    style="@style/TS.Theme.Widget.Text"
                    android:layout_gravity="top"
                    android:layout_toRightOf="@+id/totalprice_selectyarn_tv"
                    android:layout_alignBottom="@+id/totalprice_selectyarn_tv"
                    android:text="/公斤"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="right"
                android:layout_alignTop="@+id/tv"
                android:layout_toRightOf="@+id/tv"
                >
                <TextView
                    android:id="@+id/tv1"
                    style="@style/TS.Theme.Widget.Text"
                    android:textColor="@color/orange"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="板毛:"/>
                <TextView
                    android:id="@+id/unitprice_selectyarn_tv"
                    style="@style/TS.Theme.Widget.Text"
                    android:textColor="@color/orange"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/tv1"
                    />
                </RelativeLayout>
            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>