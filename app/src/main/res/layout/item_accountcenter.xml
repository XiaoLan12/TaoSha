<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">
    <TextView
        android:id="@+id/title_accountcenter_tv"
        style="@style/TS.Theme.Widget.Text"
        android:textSize="@dimen/font_normal2"
        android:textColor="@color/common_h1"
        android:text="毛织网会员活动返现"/>
    <TextView
        android:id="@+id/time_accountcenter_tv"
        style="@style/TS.Theme.Widget.Text"
        android:layout_below="@+id/title_accountcenter_tv"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2017-09-13 17:04"/>
    <TextView
        android:id="@+id/total_accountcenter_tv"
        style="@style/TS.Theme.Widget.Text"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+1000.00元"/>

</RelativeLayout>