<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/head_comment_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/icon_delete"/>
        <TextView
            android:id="@+id/name_comment_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_toRightOf="@+id/head_comment_iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:text="张三"/>
        <TextView
            android:id="@+id/time_comment_tv"
            style="@style/TS.Theme.Widget.Text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="2017.06.19"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/detail_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaaaaaaaaaaaa"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_gravity=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品详情"/>
        <TextView
            android:id="@+id/like_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_delete"
            android:gravity="center_vertical"
            android:text="19"/>
        <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_delete"
        android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
        android:text="19"/>

    </LinearLayout>

</LinearLayout>