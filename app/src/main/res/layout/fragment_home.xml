<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/common_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">
    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:indicator_drawable_selected="@drawable/selected_radius"
        app:indicator_drawable_unselected="@drawable/unselected_radius"
        app:indicator_height="5dp"
        app:indicator_margin="4dp"
        app:indicator_width="5dp"
        android:id="@+id/banner"
        android:layout_width="match_parent"

        android:layout_height="180dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/home_search_linearlayout"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ll_search">
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_search"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textSize="12sp"
            android:text="搜索纱线"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_scan"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"

        android:src="@drawable/icon_scan"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/ll_search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
<android.support.v7.widget.RecyclerView
    android:id="@+id/recycleview_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_index_daohang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/index_daohang"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_daily"
            android:layout_width="0dp"
            android:layout_height="160dp"


            android:layout_weight="1"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/common_divider_narrow"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_nayang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
              />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_divider_narrow"/>
            <ImageView
                android:id="@+id/img_banmao"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
              />
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
