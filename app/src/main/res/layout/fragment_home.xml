<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/common_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">
    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:indicator_drawable_selected="@drawable/selected_radius"
        app:indicator_drawable_unselected="@drawable/unselected_radius"
        app:indicator_height="5dp"
        app:indicator_margin="4dp"
        app:indicator_width="5dp"
        android:id="@+id/banner"
        android:layout_width="match_parent"

        android:layout_height="180dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
       >
        <ImageView
            android:id="@+id/img_tiao_search"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_index_search"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:background="@drawable/home_search_linearlayout"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/ll_search">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="6dp"
                android:src="@drawable/icon_search"/>
            <EditText
                android:id="@+id/search_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:hint="请输入关键字"
                />



        </LinearLayout>
        <ImageView
            android:id="@+id/voice_iv"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_index_yuyin"/>
        <RelativeLayout
            android:id="@+id/ll_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/img_scan"
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"

                android:src="@drawable/icon_scan"/>
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_white_selector1"
                android:textSize="12sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="搜索"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
<android.support.v7.widget.RecyclerView
    android:id="@+id/recycleview_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_index_daohang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/index_daohang"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/img_daily"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:background="@color/common_divider_narrow"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_nayang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
              />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_divider_narrow"/>
            <ImageView
                android:id="@+id/img_banmao"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
              />
        </LinearLayout>
    </LinearLayout>
