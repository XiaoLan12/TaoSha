<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/red1">
        <ImageView
          android:id="@+id/img_back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/icon_back"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:background="@drawable/home_search_linearlayout"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/ll_search">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_search"/>
        <EditText
            android:id="@+id/search_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:hint="请输入关键字"
           />
        <ImageView
            android:id="@+id/voice_iv"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="6dp"
            android:src="@drawable/icon_voice"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:orientation="vertical"

        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/scan_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_scan"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:background="@color/common_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal2"
            android:text="热门搜索"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            android:scrollbars="none"
            >

            <com.yizhisha.taosha.common.flowlayout.TagFlowLayout
                android:id="@+id/tagflowlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_8"
                zhy:max_select="-1">

            </com.yizhisha.taosha.common.flowlayout.TagFlowLayout>
        </ScrollView>
        <TextView
            android:id="@+id/search_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:background="@color/red1"
            android:gravity="center"
            android:text="立即搜索"
            android:textColor="@color/white" />
    </RelativeLayout>




</LinearLayout>